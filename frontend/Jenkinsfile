pipeline {
    agent any

    tools {
       sonarQube 'sonar-server' 
    }


    stages {
        stage('git checkout') {
            steps {
             checkout scmGit(branches: [[name: '*/main']],
             extensions: [sparseCheckout([[path: 'frontend']])],   // extensions: [[$class: 'SparseCheckoutPaths', sparseCheckoutPaths: [[path:'frontend']]]],
             userRemoteConfigs: [[url: 'https://github.com/kvnikhildev/Ecommerce-sample1.git']])  
            }
        }

        stage('git install pacage and lint check ') {
            steps {
                dir('frontend'){
                sh '''
                npm install
                npm run lint || true
                '''
                }
             
            }
        }

         stage('snyk test ') {
            steps {
                dir('frontend'){
                sh '''
                snyk $SNYK_TOKEN
                snyk test || true
                snyk monitor || true 
                '''
                }
             
            }
        }

        stage('sonarqube analysis') {
            steps {
                dir('frontend'){
                withSonarQubeEnv(credentialsId: 'sonar-jenkin') {
                    sh '''
                            npx sonar-scanner \
                            - Dsonar.projectKey=ecommerce-frontend \
                            - Dsonar.sources=. \
                        '''           
                    }
                }
            }

        }
    }
}


